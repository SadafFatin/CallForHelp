<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NalexoneDashboardActivity"
    tools:showIn="@layout/app_bar_naloxone_dashboard"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:cameraBearing="112.5"
        map:cameraTilt="30"
        map:cameraZoom="17"
        map:uiCompass="false"
        map:uiRotateGestures="true"
        map:uiScrollGestures="false"
        map:uiTiltGestures="true"
        map:uiZoomControls="false"
        map:uiZoomGestures="true"
        tools:context=".NalexoneDashboardActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:gravity="start"
            android:id="@+id/request"
            android:padding="@dimen/card_elevation"
            android:background="#16287F81"
            android:orientation="vertical"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_margin="2dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:background="@drawable/button_bg_dark"
                android:onClick="findSosRequests"
                android:text="SOS Requests"
                android:textColor="#ffff"
                android:padding="@dimen/card_elevation"
                />
        </LinearLayout>


    </fragment>
</RelativeLayout>