<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SpalshTutorial"
    android:orientation="vertical"
    android:padding="@dimen/layout_padding"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_corner"
        android:elevation="@dimen/card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_padding"
            android:orientation="vertical">

            <com.smarteist.autoimageslider.SliderLayout
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="420dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register As"
                android:gravity="center_horizontal"
                android:textSize="22sp"
                android:layout_marginTop="@dimen/layout_padding"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg_light"
                android:text="@string/naloxone_user"
                android:textColor="#ffff"
                android:layout_marginTop="@dimen/layout_padding"
                android:onClick="naloxoneSignUp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg_accent"
                android:text="@string/opioid_user"
                android:textColor="#ffff"
                android:layout_marginTop="@dimen/layout_padding"
                android:onClick="opioidSignUp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg_dark"
                android:text="@string/login"
                android:textColor="#ffff"
                android:layout_marginTop="@dimen/layout_padding"
                android:layout_marginBottom="@dimen/layout_padding"
                android:onClick="login"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>








</LinearLayout>